= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :surname
    = f.text_field :surname
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :is_blocked
    = f.check_box :is_blocked
  .field
    = f.label :redmine_id
    = f.number_field :redmine_id
  .field
    = f.label :redmine_password_hash
    = f.text_field :redmine_password_hash
  .field
    = f.label :groups
    = f.text_field :groups
  .field
    = f.label :employer_position
    = f.text_field :employer_position
  .actions
    = f.submit 'Save'
