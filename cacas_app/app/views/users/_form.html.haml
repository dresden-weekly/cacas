= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :user__username
  .field
    = f.label :firstname
    = f.text_field :user__firstname
  .field
    = f.label :lastname
    = f.text_field :user__lastname
  .field
    = f.label :email
    = f.text_field :user__email
  .actions
    = f.submit 'Save'
