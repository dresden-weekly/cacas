= form_for @dismiss_employee do |f|
  - if @dismiss_employee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dismiss_employee.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @dismiss_employee.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :surname
    = @dismiss_employee.user__surname
  .field
    = f.label :name
    = @dismiss_employee.user__name
  .actions
    = f.hidden_field :user__id
    = f.submit 'Save'
