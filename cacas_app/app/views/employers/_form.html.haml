= form_for @employer do |f|
  - if @employer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@employer.errors.count, "error")} prohibited this employer from being saved:"
      %ul
        - @employer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :contact_user
    = f.number_field :contact_user
  .field
    = f.label :is_client
    = f.check_box :is_client
  .field
    = f.label :groups
    = f.text_area :groups
  .actions
    = f.submit 'Save'
